@model DegisiklikBildirimFormu.Models.Form
<h1>Form Oluştur</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
                <input type="radio" id="priority-low" name="Uygulama" checked value="Düşük Öncelik">
                <label for="priority-low">Düşük Öncelikli</label>
            
                <input type="radio" id="priority-normal" name="Uygulama" value="Normal Öncelik">
                <label for="priority-normal">Normal Öncelikli</label>
            
                <input type="radio" id="priority-high" name="Uygulama" value="Acil">
                <label for="priority-high">Acil</label>
   
            <div class="form-group">
                <label asp-for="YayinTarihi" class="control-label">Yayın Tarihi</label>
                <input asp-for="YayinTarihi" class="form-control" type="date" />
                <span asp-validation-for="YayinTarihi" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DegisiklikNumarasi" class="control-label">Değişiklik Numarası</label>
                <input asp-for="DegisiklikNumarasi" class="form-control" />
                <span asp-validation-for="DegisiklikNumarasi" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Aciklama" class="control-label">Açıklama</label>
                <textarea asp-for="Aciklama" class="form-control"></textarea>
                <span asp-validation-for="Aciklama" class="text-danger"></span>
            </div>
              
            <div class="form-group">
                <label asp-for="Not" class="control-label"></label>
                <textarea asp-for="Not" class="form-control"></textarea>
                <span asp-validation-for="Not" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Yayınlayan" class="control-label"></label>
                <input asp-for="Yayınlayan" class="form-control" />
                <span asp-validation-for="Yayınlayan" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="KontrolEden" class="control-label">Kontrol Eden</label>
                <input asp-for="KontrolEden" class="form-control" />
                <span asp-validation-for="KontrolEden" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Bolum" class="control-label">Gönderilecek Bölüm</label>
                <select asp-for="Bolum" class="form-control">
                    <option value="" disabled selected>Lütfen seçin</option>
                    <option value="Tasarım Bölümü">Tasarım Bölümü</option>
                    <option value="Arge Bölümü">Arge Bölümü</option>
                    <option value="İnsan Kaynakları">İnsan Kaynakları</option>
                </select>
            </div>
            <table class="table" id="kodlar-table">
                <thead>
                    <tr>
                        <th>Eski Kod</th>
                        <th>Yeni Kod</th>
                        <th>Adet</th>
                        <th>İşlem</th>
                    </tr>
                </thead>
                <tbody id="kodlar-container">

                    <tr>
                        <td>
                            <input name="EskiYeniKodlar[0].EskiKod" class="form-control" />
                        </td>
                        <td>
                            <input name="EskiYeniKodlar[0].YeniKod" class="form-control" />
                        </td>
                        <td>
                            <input name="EskiYeniKodlar[0].Adet" type="number" class="form-control" />
                        </td>
                        <td>
                            <button type="button" class="btn btn-danger btn-sm remove-row">Sil</button>
                        </td>
                    </tr>
                </tbody>
            </table>
            <button type="button" class="btn btn-primary" onclick="addRow()">Kod Ekle</button>
            <script>
                var rowCount = 1;
                function addRow() {
                    var table = document.getElementById('kodlar-container');
                    var newRow = document.createElement('tr');
                    newRow.innerHTML = `
                                <td><input name="EskiYeniKodlar[${rowCount}].EskiKod" class="form-control" /></td>
                                <td><input name="EskiYeniKodlar[${rowCount}].YeniKod" class="form-control" /></td>
                                <td><input name="EskiYeniKodlar[${rowCount}].Adet" class="form-control" /></td>
                                <td><button type="button" class="btn btn-danger" onclick="removeRow(this)">Sil</button></td> `;
                    table.appendChild(newRow); rowCount++;
                }
                function removeRow(button) {
                    var row = button.parentNode.parentNode; row.parentNode.removeChild(row);
                }
            </script>
            <hr />
            <div>
                <a asp-action="Index" class="btn btn-outline-dark"><i class="bi bi-arrow-left"></i>Listeye Dön</a>
                <button type="submit" class="btn btn-primary">Oluştur</button>
            </div>
        </form>
    </div>
</div>

